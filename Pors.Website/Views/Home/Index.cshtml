<!-- faq -->
@if (faqs.Items.Any())
{
    <div id="faq" class="ptb-100 white-bg">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-9 col-lg-8">
                    <div class="section-heading text-center mb-5 mb-sm-5 mb-md-3 mb-lg-5">
                        <h2>سوالات متداول</h2>
                        <p class="lead">
                            لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ و با
                            استفاده از طراحان گرافیک است. چاپگرها و متون بلکه روزنامه و
                            مجله در ستون و سطرآنچنان که لازم است
                        </p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 col-lg-12">
                    <div id="accordion-one" class="accordion accordion-faq">
                        @{
                            int i = -1;
                        }
                        @foreach (var faq in faqs.Items)
                        {
                            i++;
                            <div class="card mb-0">
                                <a class="card-header collapsed" data-toggle="collapse" href="#faq-@faq.Id">
                                    <h6 class="mb-0 d-inline-block">@faq.Question</h6>
                                </a>
                                <div id="faq-@faq.Id" class="collapse @(i == 0 ? "show" : "")" data-parent="#accordion-one">
                                    <div class="card-body">
                                        <p>@faq.Answer</p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                @*<div class="w-100 text-center mt-5">
                        <p class="">
                            سوالات بیشتری دارید؟
                            <a asp-controller="" asp-action="" class="page-scroll">با ما تماس بگیرید</a>
                        </p>
                    </div>*@
            </div>
        </div>
    </div>
}
