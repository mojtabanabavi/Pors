@{
    Layout = "_publicLayout";
    ViewData["Title"] = "صفحه‌ی اصلی";

    @inject MediatR.ISender MediatR

    var faqs = await MediatR.Send(new GetFaqsQuery(1, 5));
    var newestExams = await MediatR.Send(new GetExamsQuery(SortTypes.Newest, 1, 4));
    var mostVisitedExams = await MediatR.Send(new GetExamsQuery(SortTypes.MostVisited, 1, 4));
}

@section styles{
    <link rel="stylesheet" href="~/lib/owl-carousel/css/owl.carousel.min.css" />
    <link rel="stylesheet" href="~/lib/owl-carousel/css/owl.theme.default.min.css" />
}

@section scripts{
    <script src="~/lib/owl-carousel/js/owl.carousel.min.js"></script>
}

<!-- hero -->
<section class="hero-home ptb-100 gradient-overlay">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 col-lg-8">
                <div class="hero-content-wrap text-white text-center position-relative z-index">
                    <h1 class="text-white">پُرس، سامانه‌ی پرسش و پاسخ</h1>
                    <p class="lead">
                        ورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ و با
                        استفاده از طراحان گرافیک است.
                    </p>
                    <div class="domain-search-wrap">
                        <form asp-controller="" asp-action="" class="domain-search-form w-75 d-block mx-auto">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="جستجوی آزمون" required>
                                <div class="input-group-append">
                                    <button class="btn search-btn btn-hover d-flex align-items-center" type="submit">
                                        <span class="ti-search ml-2"></span> جستجو
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- newest exams -->
@if (newestExams.Items.Any())
{
    <section class="our-services ptb-100 gray-light-bg">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-9 col-lg-8">
                    <div class="section-heading text-center mb-5 mb-sm-5 mb-md-3 mb-lg-5">
                        <h2>جدیدترین آزمون‌ها</h2>
                        <p class="lead">
                            لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ و با
                            استفاده از طراحان گرافیک است. چاپگرها و متون بلکه روزنامه و
                            مجله در ستون و سطرآنچنان که لازم است
                        </p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 col-lg-12">
                    <div class="owl-carousel owl-theme exams-carousel custom-dot dot-bottom-center owl-loaded owl-drag">
                        <div class="owl-stage-outer">
                            <div class="owl-stage">
                                <div class="owl-item">
                                    @foreach (var exam in newestExams.Items)
                                    {
                                        <div class="single-blog-card card border-0 shadow-sm">
                                            <span class="category position-absolute badge badge-pill badge-primary">
                                                بدون دسته‌بندی
                                            </span>
                                            <img src="~/@exam.Image" class="card-img-top position-relative" alt="@exam.Title" />
                                            <div class="card-body">
                                                <div class="post-meta mb-2">
                                                    <ul class="list-inline meta-list d-flex justify-content-between">
                                                        <li class="d-inline">@exam.CreatedAt</li>
                                                        <li class="list-inline-item">
                                                            <span>@exam.VisitCount</span> بازدید
                                                        </li>
                                                    </ul>
                                                </div>
                                                <h3 class="h5 card-title">
                                                    <a asp-controller="exams" asp-action="attempt" asp-route-id="@exam.Id">@exam.Title</a>
                                                </h3>
                                                <p class="card-text">@exam.ShortDescription</p>
                                                <div class="text-center">
                                                    <a asp-controller="exams" asp-action="attempt" asp-route-id="@exam.Id" class="btn outline-btn">شرکت در آزمون</a>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mt-5">
                <h5 class="mb-1 d-flex align-items-center justify-content-center">
                    <span class="ti-loop color-primary mr-3 icon-sm"></span>
                    <a asp-controller="" asp-action="" class="ml-2">مشاهده‌ی بیشتر</a>
                </h5>
            </div>
        </div>
    </section>
}

<!-- another section -->
<section class="hero-comment ptb-100 gradient-overlay">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-9 col-lg-8">
                <div class="call-to-action-content text-white text-center">
                    <h2 class="text-white">نظر شما برای ما ارزشمند است</h2>
                    <p>با ثبت تجربه و نظر خود ما را در افزایش رضایت خود یاری کنید</p>
                    <div class="action-btns mt-5">
                        <a href="#" class="btn solid-white-btn mr-3">ثبت نظر</a>
                        <a href="#" class="btn outline-white-btn">درباره‌ی ما</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

