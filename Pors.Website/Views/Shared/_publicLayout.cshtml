@{
    @inject IOptions<GoogleRecaptchaSettings> googleRecaptchaSettings
}

<!DOCTYPE html>
<html>
<head>
    <title>پُرس - @ViewData["Title"]</title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0 shrink-to-fit=no">

    <!-- favicon -->
    <link async rel="icon" type="image/png" href="~/img/defaults/favicon.png">

    <!-- librarys -->
    <link async rel="stylesheet" href="~/lib/animate/css/animate.min.css">
    <link async rel="stylesheet" href="~/lib/hs-megamenu/css/hs.megamenu.css">
    <link async rel="stylesheet" href="~/lib/bootstrap/css/bootstrap-rtl.min.css">
    @RenderSection("styles", false)

    <!-- fonts -->
    <link async rel="stylesheet" href="~/fonts/sahel/css/sahel.css">
    <link async rel="stylesheet" href="~/fonts/themify/css/themify.css">
    <link async rel="stylesheet" href="~/fonts/iransans/css/iransans.css">
    <link async rel="stylesheet" href="~/fonts/fontawesome/css/fontawesome.min.css">

    <!-- styles -->
    <link async rel="stylesheet" href="~/css/hostlar.css" />
    <link async rel="stylesheet" href="~/css/main.public.css" />
</head>
<body>

    <!-- header -->
    <partial name="_publicHeader" />

    <!-- content -->
    <div class="main main-with-padding">
        @RenderBody()

        <!-- login modal -->
        <div class="modal fade" id="login-modal" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content bg-white">
                    <form id="login-form" asp-controller="identity" asp-action="login" method="post">
                        <div class="modal-header">
                            <h5 class="modal-title">بازیابی حساب کاربری</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <label id="login-error" class="field-validation-error text-center d-none">‌</label>
                            <div class="form-group">
                                <label class="pb-1">شناسه‌</label>
                                <div class="input-group input-group-merge">
                                    <input type="text" name="ParticipantId" class="form-control" placeholder="مثال: e1c1a181-8935-0655-fbf0-2c77ddba25d5" required>
                                </div>
                            </div>
                                <div class="g-recaptcha" data-sitekey="@googleRecaptchaSettings.Value?.ClientKey"></div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn outline-btn" data-dismiss="modal">انصراف</button>
                            <button type="submit" class="btn primary-solid-btn">بازیابی</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- footer -->
    <partial name="_publicFooter" />

    <!-- scroll top -->
    <button class="scroll-top scroll-to-target" data-target="html">
        <span class="ti-rocket"></span>
    </button>

    <!-- loader -->
    <div id="preloader">
        <div class="loader">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
        </div>
    </div>

    <!-- librarys -->
    <script src="~/lib/jquery/js/jquery.min.js"></script>
    <script src="~/lib/headroom/js/headroom.min.js"></script>
    <script src="~/lib/hs-megamenu/js/hs.megamenu.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/GoogleRecaptcha/js/google-recaptcha.min.js"></script>
    @RenderSection("scripts", false)

    <!-- scripts -->
    <script src="~/js/main.public.js"></script>
</body>
</html>