@model Pors.Application.Questions.Commands.CreateQuestionCommand
@{
    Layout = "_adminLayout";
    ViewData["Title"] = "ایجاد سوال";
}

<form asp-action="create" method="post">
    <div class="row">
        <div class="col">
            <div class="card bg-secondary shadow">
                <div class="card-header bg-bg-white border-0">
                    <h3 class="mb-0">ایجاد سوال</h3>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-center mb-4"></div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label asp-for="ExamId" class="form-control-label">شناسه آزمون</label>
                                <select asp-for="ExamId" asp-items="@ViewBag.ExamsSelectList" class="form-control form-control-alternative"></select>
                                <span asp-validation-for="ExamId"></span>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label asp-for="Title" class="form-control-label">عنوان سوال</label>
                                <input asp-for="Title" class="form-control form-control-alternative" placeholder="عنوان سوال">
                                <span asp-validation-for="Title"></span>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <button type="submit" class="btn btn-success">ایجاد سوال</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
