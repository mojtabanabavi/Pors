
@{
    Layout = "_adminLayout";
    ViewData["Title"] = "لیست نقش‌ها";
}

@section styles{
    <link rel="stylesheet" href="~/lib/sweetalert2/css/sweetalert2.min.css" />
    <link rel="stylesheet" href="~/lib/datatable/css/dataTables.bootstrap4.min.css" />
}

@section scripts{
    <script src="~/lib/sweetalert2/js/sweetalert2.all.min.js"></script>
    <script src="~/lib/datatable/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatable/js/dataTables.bootstrap4.min.js"></script>
}

<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header bg-transparent d-flex justify-content-between">
                <h3 class="mb-0">@ViewData["Title"]</h3>
                <a asp-action="create" class="btn btn-sm btn-primary">ایجاد نقش</a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table align-items-center table-flush w-100" id="roles-datatable">
                        <thead class="thead-light">
                            <tr>
                                <th>شناسه</th>
                                <th>عنوان</th>
                                <th>توضیحات</th>
                                <th>عملیات</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
</div>