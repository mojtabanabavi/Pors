@model GetExamQueryResponse
@{
    ViewData["Title"] = "ویرایش آزمون";

    var examStatusSelectList = Pors.Website.Extensions.EnumExtensions.ToSelectList<ExamStatus>();
}

<form asp-action="update" enctype="multipart/form-data" method="post">
    <div class="row">
        <div class="col-xl-8 order-xl-1 mb-5 mb-xl-0">
            <div class="card bg-secondary shadow">
                <div class="card-header bg-bg-white border-0">
                    <h3 class="mb-0">@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-center mb-4"></div>
                    <div class="row">
                        <div class="col-lg-10">
                            <div class="form-group">
                                <label asp-for="Title" class="form-control-label">عنوان آزمون</label>
                                <input asp-for="Title" class="form-control form-control-alternative" placeholder="عنوان آزمون">
                                <span asp-validation-for="Title"></span>
                            </div>
                        </div>
                        <div class="col-lg-2">
                            <div class="form-group">
                                <label asp-for="Status" class="form-control-label">وضعیت آزمون</label>
                                <select asp-for="Status" asp-items="@examStatusSelectList" class="form-control form-control-alternative"></select>
                                <span asp-validation-for="Status"></span>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label asp-for="ShortDescription" class="form-control-label">توضیحات کوتاه</label>
                                <textarea rows="3" asp-for="ShortDescription" class="form-control form-control-alternative" placeholder="توضیحات کوتاه"></textarea>
                                <span asp-validation-for="ShortDescription"></span>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label asp-for="LongDescription" class="form-control-label">توضیحات کامل</label>
                                <textarea rows="5" asp-for="LongDescription" class="form-control form-control-alternative" placeholder="توضیحات کامل"></textarea>
                                <span asp-validation-for="LongDescription"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-end">
                    <a asp-action="index" class="btn btn-warning mr-2">بازگشت</a>
                    <button type="submit" class="btn btn-success">ویرایش آزمون</button>
                </div>
            </div>
        </div>
        <div class="col-xl-4 order-xl-2 mb-5 mb-xl-0">
            <div class="card mb-4">
                <div class=" card-header">
                    <img id="image-preview-output" class="w-100 upload-image" src="~/@Model.Image">
                </div>
                <div class="card-body pt-0 pt-md-4">
                    <input asp-for="Image" type="file" accept="image/*" id="image-preview-input" class="d-none" />
                    <label for="image-preview-input" class="btn btn-primary m-0">
                        <span>انتخاب تصویر</span>
                    </label>
                    <span asp-validation-for="Image"></span>
                </div>
            </div>
        </div>
    </div>
</form>
