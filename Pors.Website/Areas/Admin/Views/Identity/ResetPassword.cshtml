@model Pors.Application.Identity.Commands.ResetPasswordCommand
@{
    Layout = "_identityLayout";
    ViewData["Title"] = "بازنشانی رمز عبور";
}

<div class="container mt--8 pb-5">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
            <div class="card bg-secondary shadow border-0">
                <div class="card-body p-5">
                    <div asp-validation-summary="ModelOnly" class="text-center mb-4"></div>
                    <form asp-action="resetPassword" method="post">
                        <div class="form-group mb-3">
                            <div class="input-group input-group-alternative">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="ni ni-email-83"></i></span>
                                </div>
                                <input asp-for="Token" class="form-control" placeholder="توکن خود را وارد کنید">
                            </div>
                            <span asp-validation-for="Token"></span>
                        </div>
                        <div class="form-group mb-3">
                            <div class="input-group input-group-alternative">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="ni ni-lock-circle-open"></i></span>
                                </div>
                                <input asp-for="NewPassword" class="form-control" placeholder="رمز عبور خود را وارد کنید">
                            </div>
                            <span asp-validation-for="NewPassword"></span>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary mt-3 cursor-pointer">تغییر رمز عبور</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-6">
                    <a asp-action="login" class="text-light"><small>ورود به حساب</small></a>
                </div>
                <div class="col-6 text-right">
                    <a href="#" class="text-light"><small></small></a>
                </div>
            </div>
        </div>
    </div>
</div>