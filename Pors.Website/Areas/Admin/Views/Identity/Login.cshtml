@model LoginUserQuery
@{
    Layout = "_identityLayout";
    ViewData["Title"] = "ورود به حساب کاربری";

    var returnUrl = Context.Request.Query["returnurl"];
}

<div class="container mt--8 pb-5">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
            <div class="card bg-secondary shadow border-0">
                <div class="card-header bg-transparent pb-5">
                    <div class="text-muted text-center mt-2 mb-3"><small>ورود به حساب توسط:</small></div>
                    <div class="btn-wrapper text-center">
                        <a href="#" class="btn btn-neutral btn-icon disabled">
                            <span class="btn-inner--icon"><img src="~/img/defaults/github-icon.svg"></span>
                            <span class="btn-inner--text">Github</span>
                        </a>
                        <a asp-action="ExternalLogin" asp-route-provider="Google" class="btn btn-neutral btn-icon">
                            <span class="btn-inner--icon"><img src="~/img/defaults/google-icon.svg"></span>
                            <span class="btn-inner--text">Google</span>
                        </a>
                    </div>
                </div>
                <div class="card-body p-5">
                    <div asp-validation-summary="ModelOnly" class="text-center mb-4"></div>
                    <form asp-action="login" asp-route-returnurl="@returnUrl" method="post">
                        <div class="form-group mb-3">
                            <div class="input-group input-group-alternative">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="ni ni-email-83"></i></span>
                                </div>
                                <input asp-for="Email" class="form-control" placeholder="ایمیل خود را وارد کنید">
                            </div>
                            <span asp-validation-for="Email"></span>
                        </div>
                        <div class="form-group">
                            <div class="input-group input-group-alternative">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="ni ni-lock-circle-open"></i></span>
                                </div>
                                <input asp-for="Password" type="password" class="form-control" placeholder="رمز عبور">
                            </div>
                            <span asp-validation-for="Password"></span>
                        </div>
                        <div class="form-group">
                            <div class="custom-control custom-control-alternative custom-checkbox">
                                <input asp-for="RememberMe" class="custom-control-input">
                                <label asp-for="RememberMe" class="custom-control-label">مرا به خاطر بسپار</label>
                                <span asp-for="RememberMe"></span>
                            </div>
                            <span asp-validation-for="RememberMe"></span>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary mt-3 cursor-pointer">ورود به حساب</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-6">
                    <a asp-action="forgetPassword" class="text-light"><small>فراموشی رمز عبور؟</small></a>
                </div>
                <div class="col-6 text-right">
                    <a href="#" class="text-light"><small></small></a>
                </div>
            </div>
        </div>
    </div>
</div>